    "category": {
      "type": "enumeration",
      "enum": [
        "Brochure",
        "Floor Plans",
        "Permits", 
        "Legal Documents",
        "Specifications",
        "Architectural Drawings",
        "Construction Documents",
        "Marketing Materials",
        "Terms & Conditions",
        "Approvals",
        "Other"
      ],
      "required": true
    },
    "displayOrder": {
      "type": "integer",
      "default": 0
    },
    "isPublic": {
      "type": "boolean",
      "default": true
