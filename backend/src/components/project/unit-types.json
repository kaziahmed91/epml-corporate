{
  "collectionName": "components_project_unit_types",
  "info": {
    "displayName": "Unit Types",
    "description": "Comprehensive unit specifications for residential and commercial properties"
  },
  "options": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "unitCategory": {
      "type": "enumeration",
      "enum": ["residential", "commercial", "parking", "utility"],
      "required": true
    },
    "type": {
      "type": "enumeration",
      "enum": [
        "studio",
        "1bed",
        "2bed",
        "3bed",
        "4bed",
        "penthouse",
        "duplex",
        "shop",
        "showroom",
        "atm",
        "food_court",
        "bank",
        "office",
        "warehouse"
      ]
    },
    "dimensions": {
      "type": "component",
      "repeatable": false,
      "component": "specifications.dimensions"
    },
    "residentialSpecs": {
      "type": "component",
      "repeatable": false,
      "component": "specifications.residential"
    },
    "commercialSpecs": {
      "type": "component",
      "repeatable": false,
      "component": "specifications.commercial"
    },
    "floorPlan": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images", "files"]
    },
    "images": {
      "type": "component",
      "repeatable": true,
      "required": false,
      "component": "project.photo-item"
    },
    "hasLayoutPlan": {
      "type": "boolean",
      "default": false
    },
    "facing": {
      "type": "enumeration",
      "enum": [
        "North",
        "South",
        "East",
        "West",
        "North-East",
        "North-West",
        "South-East",
        "South-West"
      ],
      "multiple": true
    },
    "floors": {
      "type": "component",
      "repeatable": true,
      "component": "project.floor-availability"
    },
    "features": {
      "type": "component",
      "repeatable": true,
      "component": "common.text-list-item"
    },
    "description": {
      "type": "text"
    }
  }
}
