{
  "collectionName": "components_project_photo_items",
  "info": {
    "displayName": "Photo Item",
    "description": "Categorized photo item for projects with Cloudinary folder organization"
  },
  "options": {},
  "attributes": {
    "photo": {
      "type": "media",
      "multiple": false,
      "required": true,
      "allowedTypes": ["images"]
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "exterior",
        "interior",
        "construction_progress",
        "floor_plan",
        "amenities",
        "site_plan",
        "elevation",
        "lobby",
        "sample_unit",
        "parking",
        "common_areas",
        "landscaping",
        "brochure"
      ],
      "required": true
    },
    "subcategory": {
      "type": "string",
      "description": "Optional subcategory for more specific organization"
    },
    "caption": {
      "type": "string",
      "description": "Optional caption for the photo"
    },
    "sortOrder": {
      "type": "integer",
      "default": 0,
      "description": "Order for displaying photos within category"
    },
    "isHero": {
      "type": "boolean",
      "default": false,
      "description": "Mark as hero/featured image for the category"
    }
  }
}