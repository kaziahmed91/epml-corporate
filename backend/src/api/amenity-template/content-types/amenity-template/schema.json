{
  "kind": "collectionType",
  "collectionName": "amenity_templates",
  "info": {
    "singularName": "amenity-template",
    "pluralName": "amenity-templates",
    "displayName": "Amenity Template",
    "description": "Pre-defined amenities that can be selected when creating projects"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "icon": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": [
        "recreation",
        "wellness",
        "community",
        "parking",
        "services",
        "outdoor"
      ],
      "required": true
    },
    "isActive": {
      "type": "boolean",
      "default": true
    },
    "displayOrder": {
      "type": "integer",
      "default": 0
    }
  }
}
